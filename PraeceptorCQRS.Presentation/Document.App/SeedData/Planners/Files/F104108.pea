    @Chave[Estatística Descritiva]
        [Apresentação de dados em tabelas e gráficos.]
        [Medidas de tendência central e a questão da variabilidade.]
    @Chave[Correlação e regressão linear simples]
        [Relação entre duas variáveis.]
        [Estimação de parâmetros pelo mínimos quadrados.]

  @UNIDADE2
    @Chave[Probabilidade]
